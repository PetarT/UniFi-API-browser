<div class="modal fade" id="voucher_add" tabindex="-1" role="dialog" aria-labelledby="title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Kreiranje novog vaučera</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Zatvori">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="form-group row">
                        <label for="time" class="col-sm-4 col-form-label">Trajanje vaučera:</label>
                        <select class="custom-select col-sm-8" id="time">
                            <option value="360" selected>6 sati</option>
                            <option value="720">12 sati</option>
                            <option value="1140">Dan</option>
                            <option value="2280">Dva dana</option>
                            <option value="4320">Tri dana</option>
                            <option value="5700">Pet dana</option>
                            <option value="7980">Sedam dana</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Zatvori</button>
                <button type="button" class="btn btn-primary" onclick="createVoucher()">Kreiraj</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function createVoucher() {
        jQuery.ajax({
            url  : '{{ home }}/index.php',
            method: 'GET',
            dataType: 'json',
            data : {
                time   : jQuery('#time').val(),
                action : 'createVoucher',
                type   : 'ajax',
                site   : '{{ site.name }}'
            }
        }).done(function (data) {
            if (data.status == true) {
                location.reload(true);
            } else {
                // raise warning
                console.log(data.message);
            }
            jQuery('#voucher_add').modal('hide');
        });
    }
</script>
